<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.bijan.projectminiuniversity.FragEight">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="21sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/sside"
            android:layout_marginLeft="2dp"
            android:text="To"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Enter Email ID"
            android:textColorHint="#696969"
            android:id="@+id/edit1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="21sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/sside"
            android:layout_marginLeft="2dp"
            android:text="Subject"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Enter Email Subject"
            android:textColorHint="#696969"
            android:id="@+id/edit2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="21sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/sside"
            android:layout_marginLeft="2dp"
            android:text="Email Body"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Enter Email Body"
            android:textColorHint="#696969"
            android:id="@+id/edit3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:background="@drawable/sides"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="6dp"
            android:text="Send"
            android:id="@+id/buttonn1"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:background="@drawable/sides"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="2dp"
            android:text="Close"
            android:id="@+id/buttonn2"
            />

    </LinearLayout>

</LinearLayout>
